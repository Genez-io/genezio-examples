{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom"
        ],
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*"
    ]
}
